<div id="modal_new_tour" class="modal hide fade in">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3><%= t('views.tour._form.create')%></h3>
  </div>

  <%= form_for @tour, :html => {:class=>"form-horizontal"} do |f| %>
    <div class="modal-body">    
      <% if @tour.errors.any? %>
        <div class ="alert-message error" id="error_explanation">
          <h2><%= pluralize(@tour.errors.count, "error") %> Fehler verhindern das Speichern:</h2>
          <ul>
            <% @tour.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="control-group">        
        <%= f.label t('views.tour._form.riding_time'), :class => "control-label"  %>
        <div class="controls">
          <%= f.number_field :duration, :class=>"input-small"%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label t('views.tour._form.type'), :class => "control-label"  %>
        <div class="controls">
          <%= f.select :tour_type, options_for_select([['Rennrad','Rennrad'],['MTB','MTB'],['Veranstaltung','Veranstaltung']]), :class=>"input-mini" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label t('views.tour._form.planned_track'), :class => "control-label"  %>
        <div class="controls">
          <%= f.text_field :route, :class=>"input-xlarge" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label t('views.tour._form.meeting_point'), :class => "control-label"  %>
        <div class="controls">
          <%= f.text_field :meeting_point, :class=>"input-xlarge" %>
        </div>
      </div>
      
       <div class="control-group">
        <%= f.label t('views.tour._form.start_at'), :class => "control-label"  %>
          <!--%= f.datetime_select :start_at, :class=>"text" %-->
        <div class="controls">
          <div id="datetimepicker1" class="input-append date">
            <%= f.text_field :start_at, {:id => "end-at-datetime", :data => {:format=>"dd/MM/yyyy hh:mm:ss"}} %>
            <span class="add-on">
              <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
            </span>
          </div>            
        </div>
      </div>


      <div class="control-group">
        <%= f.label t('views.tour._form.info'), :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :link, :class=>"input-xlarge" %>
        </div>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.submit t('views.tour._form.save'), :class=>"btn btn-primary" %>
    </div>
  <% end %>
</div>

<script  type="text/javascript">
$(function() {
    $('.date').datetimepicker({
      language: 'de-DE',
      pickSeconds: false,   
      startDate: Date()      // set a minimum date
    });
  });
</script>