<%= form_for(new_comment, :remote => true, :html => { :class => "form-horizontal"}) do |f| %>
	<div class="control-group">
		<%= f.label t('views.tour._new_comment.comment'), :class => "control-label" %>
		<div class="controls">
			<%= f.text_field :comment, :class=>"input span6" %>
		</div>
	</div>
	<div class="control-group">
		<%= f.hidden_field :tour_id, { :value => tour.id } %>
		<div class="controls">
			<%= f.submit t('views.tour._new_comment.save'), :class=>"btn btn-primary" %>
		</div>
	</div>
<% end %>