<table class="table table-bordered table-striped" id="user_table">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.name %></td>
				<td><%= link_to 'Details', user %></td>
    			<% if (signed_in? && current_user.id == user.id) or current_user.is_admin? %>
      				<td><%= link_to 'Bearbeiten', edit_user_path(user), :class => "btn btn-small btn-primary" %></td>
      				<td><%= link_to 'Löschen', user, :confirm => 'Wirklich wirklich löschen?', :method => :delete, :class => "btn btn-small  btn-primary" %></td>
				<% else %>      				
					<td></td>
					<td></td>
    			<% end %>
    		</tr>
    	<% end %>
  	</tbody>
</table>